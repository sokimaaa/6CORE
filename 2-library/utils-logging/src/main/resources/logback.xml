<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
               %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%X{appName:-unknown}] [traceId: %X{traceId:-n/a}] [spanId: %X{spanId:-n/a}] [pid: %X{PID:- }] --- [%t] %-40.40logger{39} : %msg%n%throwable
            </pattern>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>

